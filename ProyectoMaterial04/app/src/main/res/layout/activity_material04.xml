<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Material04">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">

        <Button
            android:onClick="funBtnSimple"
            android:id="@+id/btnSimple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SNACKBAR SIMPLE"
            android:layout_marginTop="16dp"/>

        <Button
            android:onClick="funBtnInteractivo"
            android:id="@+id/btnInteractivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SNACKBAR CON CALLBACK"
            android:layout_marginTop="16dp"/>

        <Button
            android:onClick="funBtnPersonalizado"
            android:id="@+id/btnPersonalizado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COLOR PERSONALIZADO"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="end|bottom"
        android:src="@android:drawable/ic_dialog_email"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout>